Options -Indexes
RewriteEngine On
RewriteBase /

# Redirect /games/ to homepage (optional)
RedirectMatch 302 ^/games/?$ /

# Internal rewrite clean URLs to .php or .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+)$ $1.html [L]

# Redirect explicit .php/.html URLs to clean ones
RewriteRule ^(.+)\.(php|html)$ /$1 [R=301,L]

# Fallback: everything else â†’ homepage
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ / [R=302,L]
